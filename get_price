import requests

def get_bitcoin_price(crypto_id, currency='usd'):
    url = "https://api.coingecko.com/api/v3/simple/price"
    params = {
        'ids': 'crypto_id',
        'vs_currencies': 'currency'
    }
    response = requests.get(url, params=params)
    data = response.json()
    return data[crypto_id][currency]

bitcoin_price = get_bitcoin_price('bitcoin')
ethereum_price = get_crypto_price('ethereum')
bnb_price = get_crypto_price('binancecoin')

print(f"Current Bitcoin price in USD: ${bitcoin_price}")
print(f"Current Ethereum price in USD: ${ethereum_price}")
print(f"Current BNB price in USD: ${bnb_price}")
